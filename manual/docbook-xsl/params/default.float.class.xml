</refnamediv>

<refsynopsisdiv>
<src:fragment id='default.float.class.frag'>
<xsl:param name="default.float.class">
  <xsl:choose>
    <xsl:when test="contains($stylesheet.result.type,'html')">left</xsl:when>
    <xsl:otherwise>before</xsl:otherwise>
  </xsl:choose>
</xsl:param>
</src:fragment>
